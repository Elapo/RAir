<pretty-config xmlns="http://ocpsoft.org/schema/rewrite-config-prettyfaces"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://ocpsoft.org/schema/rewrite-config-prettyfaces
                      http://ocpsoft.org/xml/ns/prettyfaces/rewrite-config-prettyfaces.xsd">

    <url-mapping id="index">
        <pattern value="/" />
        <view-id value="index.xhtml" />
    </url-mapping>

    <url-mapping id="login">
        <pattern value="/login" />
        <view-id value="login.xhtml" />
    </url-mapping>

    <url-mapping id="about">
        <pattern value="/about" />
        <view-id value="about.xhtml" />
    </url-mapping>

    <url-mapping id="contact">
        <pattern value="/contact" />
        <view-id value="contact.xhtml" />
    </url-mapping>

    <url-mapping id="languages">
        <pattern value="/languages" />
        <view-id value="languages.xhtml" />
    </url-mapping>

    <url-mapping id="register">
        <pattern value="/registration" />
        <view-id value="register.xhtml" />
    </url-mapping>

    <!--TODO: dont forget to add pretty:thankyou to the link that sends to thankyou page-->
    <url-mapping id="thankyou">
        <pattern value="/thanks" />
        <view-id value="thankyou.xhtml" />
    </url-mapping>

    <url-mapping id="profile">
        <pattern value="/profile" />
        <view-id value="booking.xhtml" />
    </url-mapping>

</pretty-config>